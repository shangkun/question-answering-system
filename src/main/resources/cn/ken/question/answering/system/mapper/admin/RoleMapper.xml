<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.ken.question.answering.system.mapper.admin.RoleMapper">
  <resultMap id="ResultMap" type="cn.ken.question.answering.system.model.admin.Role">
    <id column="id" jdbcType="VARCHAR" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="description" jdbcType="VARCHAR" property="description" />
    <result column="modify_time" jdbcType="TIMESTAMP" property="modifyTime" />
    <result column="status" jdbcType="INTEGER" property="status" />
  </resultMap>

  <sql id="table">role</sql>

  <sql id="column">
    id,name,description,modify_time,status
  </sql>

  <sql id="insertColumnValue">
    #{id},#{name},#{description},#{modifyTime},#{status}
  </sql>

  <insert id="insert">
    replace into
    <include refid="table"/>
    (<include refid="column"/>)
    values (<include refid="insertColumnValue"/>)
  </insert>

  <delete id="deleteById">
    delete from
    <include refid="table"/>
    where id = #{id}
  </delete>

  <delete id="deleteByIdList">
    delete from
    <include refid="table"/>
    where id in
    <foreach collection="list" item="item" open="(" separator="," close=")">
      #{item}
    </foreach>
  </delete>

  <update id="update">
    update
    <include refid="table"/>
    <set>
      <if test="name!=null and name!=''">
        name = #{name},
      </if>
      <if test="description!=null and description!=''">
        description = #{description},
      </if>
      <if test="status!=null">
        status = #{status}
      </if>
    </set>
    <where>
      id = #{id}
    </where>
  </update>

  <select id="selectById" resultMap="ResultMap">
    select
    <include refid="column"/>
    from
    <include refid="table"/>
    where id = #{id}
  </select>

  <select id="getByAttribute" resultMap="ResultMap">
    select
    <include refid="column"/>
    from
    <include refid="table"/>
    where 1=1
    <if test="name!=null and name!=''">
      and (name like concat('%',#{name},'%')
       or description like concat('%',#{name},'%'))
    </if>
    <if test="startTime!=null and startTime!='' and endTime!=null and endTime!=''">
      and modify_time &gt;= #{startTime} and modify_time &lt; #{endTime}
    </if>
    <if test="status!=null">
      and status = #{status}
    </if>
    order by modify_time desc
    <if test="pageSize!=0">
      limit #{index},#{pageSize}
    </if>
  </select>

  <select id="countByAttribute" resultType="int">
    select
    count(id)
    from
    <include refid="table"/>
    where 1=1
    <if test="name!=null and name!=''">
      and (name like concat('%',#{name},'%')
      or description like concat('%',#{name},'%'))
    </if>
    <if test="startTime!=null and startTime!='' and endTime!=null and endTime!=''">
      and modify_time &gt;= #{startTime} and modify_time &lt; #{endTime}
    </if>
    <if test="status!=null">
      and status = #{status}
    </if>
  </select>

  <select id="countByName" resultType="int">
    select
    count(id)
    from
    <include refid="table"/>
    where
    name = #{0}
  </select>

  <select id="countByIdAndName" resultType="int">
    select
    count(id)
    from
    <include refid="table"/>
    where
    id != #{0}
    and name = #{1}
  </select>
</mapper>